{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@api": ["src/api"],
      "@api/msw-handlers": ["src/api/msw.handlers.ts"],
      "@api/types/*": ["src/api/main-backend/specs/*"],
      "@molecules": ["src/molecules"],
      "@organisms": ["src/organisms"],
      "@templates": ["src/templates"],
      "@providers": ["src/molecules/providers"],
      "@logic/*": ["src/logic/*"],
      "@theme": ["src/theme"],
      "@tests/*": ["src/tests/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
